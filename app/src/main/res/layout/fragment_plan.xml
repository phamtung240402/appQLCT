<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PlanFragment"
    android:orientation="vertical"
    android:background="@color/blur_yellow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kế hoạch"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:id="@+id/btnAddPlan"
                android:src="@drawable/ic_add"
                android:background="@drawable/bg_button"/>
    </LinearLayout>
    </LinearLayout>
    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/planChart"
        android:layout_gravity="center_horizontal"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_topleft_topright"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:tabSelectedTextColor="@color/color_item_tab"
        app:tabBackground="@drawable/bg_button"
        app:tabIndicatorHeight="0dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvKeHoach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</LinearLayout>