<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acitivity.ProfileDetailActivity"
    android:orientation="vertical"
    android:background="@color/blur_yellow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/bg_button"
            android:backgroundTint="@color/white"
            android:scaleType="centerInside"
            android:id="@+id/btnCloseQLTK"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản Lý tài khoản"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_button"
            android:src="@drawable/ic_edit"
            app:tint="@color/orange" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ltheader"
        android:layout_below="@+id/viewdong0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blur_yellow"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAvt"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/orange"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="italic"/>
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_borders"
            android:backgroundTint="@color/gray"/>
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:visibility="visible"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Name"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_borders"
            android:backgroundTint="@color/gray"
            android:visibility="visible"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llSave"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:visibility="gone">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:id="@+id/btnHuy"
                android:text="Hủy"
                android:background="@drawable/bg_borders"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:id="@+id/btnLuu"
                android:text="Lưu"
                android:background="@drawable/bg_borders"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDangxuat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_borders"
        android:text="Đăng xuất"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="normal"
        android:backgroundTint="@color/orange"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"/>
</LinearLayout>